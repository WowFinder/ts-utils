{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "target": "es2021",
        "allowJs": true,
        "declaration": true,
        "module": "commonjs",
        "lib": ["dom", "es2015", "es2016", "es2017", "es2019"],
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "src/.setup.ts"],
    "exclude": ["**/__tests__"]
}
